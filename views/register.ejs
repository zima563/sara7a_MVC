<%- include("./shared/header.ejs") %>

<div class="container text-center my-5">
    <div class="user my-3">
        <i class="far fa-edit user-icon"></i>
        <h4 class="login">Register</h4>
    </div>
    <% if (error) { %>
        <div class="alert alert-danger w-50 mx-auto my-4 rounded"><%=error %></div>
    <% } %>
    
    <div class="card p-5 w-50 m-auto">
        <form method="POST" action="/handleRegister">
            <input class="form-control" placeholder="Enter your Name" type="text" name="name">
            <% if (err.find((val)=> val.path[0]=="name")?.message) {  %>
             <div class="alert alert-danger"><%= err.find((val)=> val.path[0]=="name").message %></div>
            <% } %>
            <input class="form-control my-2 " placeholder="Enter your email" type="email" name="email">
            <% if (err.find((val)=> val.path[0]=="email")?.message) { %>
                <div class="alert alert-danger"><%= err.find((val)=> val.path[0]=="email").message %></div>
               <% } %>
            <input class="form-control  " placeholder="Enter your Password" type="password" name="password">
            <% if (err.find((val)=> val.path[0]=="password")?.message) { %>
                <div class="alert alert-danger"><%= err.find((val)=> val.path[0]=="password").message %></div>
               <% } %>
            <input class="form-control  my-2" placeholder="Password Confirmation" type="password" name="PasswordConfirmation">
            <% if (err.find((val)=> val.path[0]=="PasswordConfirmation")?.message) { %>
                <div class="alert alert-danger"><%= err.find((val)=> val.path[0]=="PasswordConfirmation").message %></div>
               <% } %>
            <button class="btn btn-default-outline my-4 w-100 rounded">Register</button>
            <a class="btn btn-default-outline" href="/login">Login</a>
        </form>
    </div>
</div>

<%- include('./shared/footer.ejs') %>